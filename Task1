package javaapplication1;

/**
 *
 * @author fa19-bse-232
 */
public class JavaApplication1 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
            Singelton forInstance=new Singelton();
            
   System.out.println(forInstance.counter);
    } 
    
}

class Singelton{
    int counter=1; 
      private static Singelton forInstance=new Singelton();
 private void myConstructor(int counter){ 
    
     this.counter=counter;
 };
  
  
   public void  incrementTheCounter(){
      counter++;
   }
}
